{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@paritytech/commontypes": ["../_generated/commontypes/src"],
      "@paritytech/commontypes/*": ["../_generated/commontypes/src/*"],

      "@paritytech/ink-editor": ["../ink-editor/src"],
      "@paritytech/ink-editor/*": ["../ink-editor/src/*"],

      "@paritytech/components": ["../components/src/"],
      "@paritytech/components/*": ["../components/src/*"]
    }
  },
  "include": ["src", "jest", "__tests__"],
  "exclude": ["jest/svgTransform.ts"]
}
